<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="create_transitive_item_table" author="sviarkaltsau">
        <createTable tableName="transitive_item">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(255)"/>
            <column name="category" type="varchar(255)"/>
            <column name="image" type="varchar(255)"/>
            <column name="status" type="varchar(255)"/>
            <column name="description" type="varchar(1000)"/>
            <column name="replacer" type="varchar(1000)"/>
        </createTable>
    </changeSet>

    <changeSet id="create_item_table" author="sviarkaltsau">
        <createTable tableName="item">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(255)"/>
            <column name="category" type="varchar(255)"/>
            <column name="image" type="varchar(255)"/>
            <column name="rating" type="int"/>
            <column name="status" type="varchar(255)"/>
            <column name="creator_id" type="bigint"/>
            <column name="user_action_date" type="varchar(255)"/>
            <column name="description" type="varchar(1000)"/>
        </createTable>
    </changeSet>

    <changeSet id="create_user_action_table" author="sviarkaltsau">
        <createTable tableName="user_action">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(255)"/>
            <column name="user_id" type="varchar(255)"/>
            <column name="action_date" type="varchar(255)"/>
            <column name="action_type" type="varchar(255)"/>
            <column name="parent_item_id" type="varchar(255)"/>
            <column name="item_id" type="varchar(255)"/>
            <column name="item_type" type="varchar(255)"/>
            <column name="item_category" type="varchar(255)"/>
            <column name="status" type="varchar(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="create_child_item_table" author="sviarkaltsau">
        <createTable tableName="child_item">
            <column autoIncrement="true" name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(255)"/>
            <column name="status" type="varchar(255)"/>
            <column name="item_id" type="bigint"/>
            <column name="location" type="varchar(255)"/>
            <column name="quantity" type="varchar(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="create_replacer_table" author="sviarkaltsau">
        <createTable tableName="replacer">
            <column autoIncrement="true" name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(255)"/>
            <column name="status" type="varchar(255)"/>
            <column name="item_id" type="bigint"/>
            <column name="comment" type="varchar(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="create_item_child_item_table" author="sviarkaltsau">
        <createTable tableName="item_child_item">
            <column name="parent_item_id" type="bigint">
                <constraints foreignKeyName="fk_item_child_item_parent_item_id" references="item (id)"/>
            </column>
            <column name="child_item_id" type="bigint">
                <constraints foreignKeyName="fk_item_child_item_child_item_id" references="child_item (id)"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="create_item_replacer_table" author="sviarkaltsau">
        <createTable tableName="item_replacer">
            <column name="original_item_id" type="bigint">
                <constraints foreignKeyName="fk_item_replacer_original_item_id" references="item (id)"/>
            </column>
            <column name="replacer_item_id" type="bigint">
                <constraints foreignKeyName="fk_item_replacer_replacer_item_id" references="replacer (id)"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="create_wishlist_table" author="sviarkaltsau">
        <createTable tableName="wishlist">
            <column autoIncrement="true" name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(255)"/>
            <column name="status" type="varchar(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="create_likelist_table" author="sviarkaltsau">
        <createTable tableName="likelist">
            <column autoIncrement="true" name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(255)"/>
            <column name="status" type="varchar(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="create_user_table" author="sviarkaltsau">
        <createTable tableName="user_table">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(255)"/>
            <column name="status" type="varchar(255)"/>
            <column name="rating" type="int"/>
            <column name="password" type="varchar(255)"/>
            <column name="role" type="varchar(255)"/>
            <column name="wishlist_id" type="bigint"/>
            <column name="likelist_id" type="bigint"/>
        </createTable>
    </changeSet>

    <changeSet id="create_wishlist_item_table" author="sviarkaltsau">
        <createTable tableName="wishlist_item">
            <column name="wishlist_id" type="bigint">
                <constraints foreignKeyName="fk_wishlist_item_wishlist_id" references="wishlist (id)"/>
            </column>
            <column name="item_id" type="bigint">
                <constraints foreignKeyName="fk_wishlist_item_item_id" references="item (id)"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="create_likelist_item_table" author="sviarkaltsau">
        <createTable tableName="likelist_item">
            <column name="likelist_id" type="bigint">
                <constraints foreignKeyName="fk_likelist_item_likelist_id" references="likelist (id)"/>
            </column>
            <column name="item_id" type="bigint">
                <constraints foreignKeyName="fk_likelist_item_item_id" references="item (id)"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="create_dislikelist_item_table" author="sviarkaltsau">
        <createTable tableName="dislikelist_item">
            <column name="likelist_id" type="bigint">
                <constraints foreignKeyName="fk_dislikelist_item_likelist_id" references="likelist (id)"/>
            </column>
            <column name="item_id" type="bigint">
                <constraints foreignKeyName="fk_dislikelist_item_item_id" references="item (id)"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
